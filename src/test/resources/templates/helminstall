{#let helm=step.helm namespace=step.namespace}
cat << EOF > values.yml
{helm.values}EOF

helm repo add {helm.chart.repoName} {helm.chart.repoUrl}
helm repo update

{! helm uninstall {helm.chart.repoName} {#if namespace.name??} --namespace {namespace.name}{/} !}
helm install {helm.chart.repoName} {helm.chart.repoName}/{helm.chart.repoName}{#if helm.chart.version??} --version {helm.chart.version}{/}{#if namespace.name??} --namespace {namespace.name}{/}{#if namespace.createNamespace??} --create-namespace{/} -f values.yml{/let}