cat << EOF > values.yml
{helm.values}
EOF

helm repo add {helm.chart.name} {helm.chart.repoUrl}
helm repo update

helm install {helm.chart.name} {helm.chart.name}/{helm.chart.name}{#if version??} --version {version}{/}{#if namespace??} --namespace {namespace}{/}{#if createNamespace??} --create-namespace{/} -f values.yml
